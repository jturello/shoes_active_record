<h3>Update Brand Details</h3>

<form action="/shoes/<%= @shoe.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_brand">Brand Name: </label>
  <input id="new_brand" name="new_brand" type="text" value="<%= @shoe.brand %>" required>
  <button type="submit">Update</button>
</form>

<hr>

<h4>Delete Shoe Brand</h4>
<form action="/shoes/<%= @shoe.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete</button>
</form>

<hr>

<% if !@shoe.stores.empty? %>
<h4><%= @sub_header_instructions %></h4>
    <ul>
      <% @shoe.stores.each do |store| %>
        <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
      <% end %>
    </ul>
<% end %>
